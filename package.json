{
  "name": "toth4-overlay",
  "homepage": "http://tipofthehats.org/",
  "authors": [
    "Alex Van Camp <email@alexvan.camp>"
  ],
  "scripts": {
    "static": "eslint **/*.js",
    "test": "npm run static"
  },
  "description": "The main broadcast assets for Tip of the Hats 2016.",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "lastfm": "^0.9.2",
    "numeral": "^1.5.3",
    "q": "^1.4.1",
    "request": "^2.61.0",
    "twitter": "^1.2.5"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "eslint": "^2.12.0",
    "eslint-config-xo": "^0.15.0",
    "eslint-plugin-babel": "^3.2.0"
  },
  "nodecg": {
    "compatibleRange": "~0.8.0",
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "dotafortress.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "brb",
        "title": "BRB",
        "width": 2,
        "file": "brb.html",
        "headerColor": "#f47425"
      },
      {
        "name": "donations",
        "title": "Donations",
        "width": 2,
        "file": "donations.html",
        "headerColor": "#f47425"
      },
      {
        "name": "lowerthird",
        "title": "Lowerthird",
        "width": 2,
        "file": "lowerthird.html",
        "headerColor": "#f47425"
      },
      {
        "name": "main",
        "title": "Master Fade",
        "width": 2,
        "file": "main.html",
        "headerColor": "#f47425"
      },
      {
        "name": "scoreboard",
        "title": "Scoreboard",
        "width": 2,
        "file": "scoreboard.html",
        "headerColor": "#f47425"
      },
      {
        "name": "now-playing",
        "title": "Now Playing",
        "width": 2,
        "file": "now-playing.html",
        "headerColor": "#f47425"
      }
    ],
    "soundCues": [
      {
        "name": "image_in",
        "assignable": false,
        "defaultFile": "sound/image_in.ogg"
      },
      {
        "name": "image_out",
        "assignable": false,
        "defaultFile": "sound/image_out.ogg"
      },
      {
        "name": "lowerthird_in",
        "assignable": false,
        "defaultFile": "sound/lowerthird_in.ogg"
      },
      {
        "name": "lowerthird_out",
        "assignable": false,
        "defaultFile": "sound/lowerthird_out.ogg"
      },
      {
        "name": "scoreboard_in",
        "assignable": false,
        "defaultFile": "sound/scoreboard_in.ogg"
      },
      {
        "name": "scoreboard_out",
        "assignable": false,
        "defaultFile": "sound/scoreboard_out.ogg"
      },
      {
        "name": "tweet_in",
        "assignable": false,
        "defaultFile": "sound/tweet_in.ogg"
      },
      {
        "name": "tweet_out",
        "assignable": false,
        "defaultFile": "sound/tweet_out.ogg"
      }
    ]
  }
}
